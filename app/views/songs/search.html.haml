%section.search-song-section
  #search-box.jumbotron
    %h2 Search Music
    .search-songs-form
      =form_tag songs_search_path, method: :get , id: "search_songs_form" ,remote: true do 
        .input-group
          =text_field_tag :query, params[:query], class: "form-control" , placeholder: "Song title or Artist name..."
          %span.input-group-btn
            =button_tag name: nil , class: "btn btn-default search-button" ,type: "submit"do
              %i
              %span Search
  #songs_list
    =render partial: "query_results" , locals: {songs: @songs, artists: @artists, query: params[:query]}
        
      