!!!
%html
  %head
    %object#plugin0{:height => "0", :type => "application/x-emotivlifesciencesbtle", :width => "0"}
      %param{:name => "onload", :value => "pluginLoaded"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Braim Browser'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Braim Browser'}"}
    = stylesheet_link_tag 'application', media: 'all' 
    = javascript_include_tag 'application' , "data-turbolinks-track" => true
    = controller_assets
    = csrf_meta_tags
  %body
    %header
      -# navigation styled for Bootstrap 3.0
      %nav.navbar.navbar-default.navbar-fixed-top
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to 'BRAIM', root_path, class: 'navbar-brand'
          .collapse.navbar-collapse
            %ul.nav.navbar-nav.navbar-right.nav-pills
              %li 
                =link_to "About", about_path 
              %li 
                =link_to "Log in", new_user_session_path, class: "btn btn-primary btn-nav"
              %li 
                =link_to "Sign up", new_user_registration_path, class: "btn btn-success  btn-nav"
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield
