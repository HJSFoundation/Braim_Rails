%h1 Recommendations
%br
.recommendations-list
  -@recommendations.each do |rec|
    =link_to song_path(rec.song.song_spotify_id) do
      .recommendation
        .album
          =image_tag rec.song.album_cover_url
        .song-info
          %h2 
            =rec.song.name
          %strong.artist-name
            =rec.song.artist_name
        .rec-score
          %strong Score:
          =rec.score
.neighbors-list
  -current_user.neighborhood.each do |neighbor|
    %h1
      =neighbor.user.name
    %strong
      =neighbor.score