=javascript_include_tag "performance/performance"
%h1 Braim Test
%div#songTest
  =render partial: "song_test", locals: {song: @song}
%section.perfomance
  .song-insight-records
    %h3 Emotiv Performance Metrics
    .record-data.text-center
      .emotion.interest
        %strong Interest
      .emotion.engagement
        %strong Engagement/Boredom
      .emotion.focus
        %strong Focus
      .emotion.relaxation
        %strong Relaxation
      .emotion.inst-excitement
        %strong Instantaneous Excitement
      .emotion.long-excitement
        %strong Long Term Excitement
      .emotion.stress
        %strong Stress
    #container{:style => "min-width: 310px; height: 100px; margin: 0 auto"}

#testModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#myModalLabel.modal-title Modal title
      .modal-body
        Recording Saved!
        %h2
          Next Song in
          %span#nextSongCounter
      .modal-footer
        %button.btn.btn-primary#btnTestAgain{:type => "button"} Record Again
        %button.btn.btn-primary#btnTestNext{:type => "button"} 
          Next


