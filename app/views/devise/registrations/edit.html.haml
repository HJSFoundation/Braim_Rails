.container-fluid
  %h2
    Edit #{resource_name.to_s.humanize}
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = f.error_notification
    .row
      .col-md-6
        .form-inputs
          %h3 Account data
          = f.input :email, required: true, autofocus: true
          = f.input :name, required: true
          = f.input :last_name, required: true
          = f.input :country, required: true
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %p
              Currently waiting confirmation for: #{resource.unconfirmed_email}
      .col-md-6
        .form-inputs
          %h3 Change password
          = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false
          = f.input :password_confirmation, required: false
          = f.input :current_password, hint: "we need your current password to confirm your changes", required: true
    .row
      .col-md-6
        .forms-inputs
          %h3 Profile info
          = f.fields_for :profile, current_user.profile do |profile_fields|
            =profile_fields.input :birthday , start_year: Time.now.year - 90, end_year: Time.now.year - 8, input_html: {type: :date}
            =profile_fields.input :gender, collection: Profile.genders.keys, selected: Profile.genders.keys[current_user.profile[:gender].to_i], input_html: { autocomplete: 'off' }

    .form-inputs
        
      .form-actions
        = f.button :submit, "Update"
    %h3 Cancel my account
    %p
      Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
    = link_to "Back", :back