.container
  #signupbox.mainbox.col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2{:style => " margin-top:50px"}
    .panel.panel-default
      .panel-heading
        .panel-title Sign Up
        %div{:style => "float:right; font-size: 85%; position: relative; top:-10px"}
          = render "devise/shared/links" 
          /%a#signinlink{:href => "#", :onclick => "$('#signupbox').hide(); $('#loginbox').show()"} Sign In
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name) ,class: "form-horizontal" )do |f|
          = f.error_notification
          .form-group
            =f.input :email, required: true, autofocus: true
          .form-group
            =f.input :name, required: true
          .form-group
            =f.input :last_name, required: true
          .form-group
            =f.input :country
          .form-group
            =f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
          .form-group
            =f.input :password_confirmation, required: true
          .form-group{:style => "border-top: 1px solid #999; padding-top:20px"}
            .div.text-right
              =f.button :submit, "Sign up"