.container-fluid
  .row.user-menu-container.square
    .col-md-12.user-details
      .row.coralbg.white
        .col-md-8.no-pad
          .user-pad
            %h3 Welcome back, Jessica
            %h4.white
              %i.fa.fa-check-circle-o
              San Antonio, TX
            %h4.white
              %i.fa.fa-twitter
              CoolesOCool
            %button.btn.btn-labeled.btn-info{:href => "#", :type => "button"}
              %span.btn-label>
                %i.fa.fa-pencil
              Update
        .col-md-4.no-pad
          .user-image
            %img.img-responsive.thumbnail{:src => "https://farm7.staticflickr.com/6163/6195546981_200e87ddaf_b.jpg"}/
      .row.overview
        .col-md-4.user-pad.text-center
          %h3 RECORDINGS
          %h4 0
        .col-md-4.user-pad.text-center
          %h3 FOLLOWERS
          %h4 0
        .col-md-4.user-pad.text-center
          %h3 FOLLOWING
          %h4 0
  %h2 Last song recordings
  .tab-content
    #songs_tab.tab-pane.active{:role => "tabpanel"} 
      %table.table
        %thead
          %tr
            %th Preview
            %th Song Name
            %th Album Name
            %th Album Cover
            %th Duration
            %th 
        %tbody#tab_body
          -@recordings.each_with_index do |recording, i|
            %tr
              %th 
                = audio_tag recording['song_info'].preview_url, class: "audio-play"
                =link_to "#", class: "btn btn-link audioButton" do
                  .glyphicon.glyphicon-play
                
              %th{:scope => "row"}
                =recording['song_info'].name
              %td
                %p 
                  =recording['song_info'].album.name
              %td
                .album-track-query
                  =spotify_image_tag recording['song_info'].album
              %td
                %p
                  =Time.at(recording['song_info'].duration_ms/1000).utc.strftime("%M:%S")
              %td
                =link_to song_path(recording['song_info'].id), class: "btn btn-default loading-button" do
                  %i
                  %span
                    Song Profile
  #ajax_message Loading Recordings ...
  =link_to "Show older recordings", scroll_path(@scroll_id), id: "#more_recordings", remote: true